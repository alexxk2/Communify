<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="itemTextAppearanceInactive">@style/RegularText</item>
        <item name="itemTextAppearanceActive">@style/RegularText</item>
        <item name="itemTextColor">@color/bottom_nav</item>
    </style>

    <style name="LargeTitle">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">@font/sf_ui_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/sf_ui_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText">
        <item name="android:autofillHints">""</item>
        <item name="android:background">@drawable/rounder_background</item>
        <item name="fontFamily">@font/sf_ui_regular</item>
        <item name="android:textAppearance">@style/Subtitle</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="singleLine">true</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/black</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_close</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextColor">@color/grey</item>
    </style>

    <style name="DefaultButton">
        <item name="backgroundTint">@color/button_color_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="CustomChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textAppearance">@style/RegularText</item>
        <item name="android:textColor">@color/chip_text_checked</item>
        <item name="checkedIcon">@null</item>
        <item name="chipBackgroundColor">@color/chip_background_checked</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="closeIconTint">@color/white</item>
    </style>

</resources>